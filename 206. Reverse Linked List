206. Reverse Linked List

Input: 1->2->3->4->5->NULL
Output: 5->4->3->2->1->NULL

/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        ListNode* prev=NULL,*nex=NULL,*current = head;
        while(current != NULL)
        {
            nex = current->next;
            current->next = prev;
            prev = current;
            current = nex;
        }
        head = prev;
        return head;
    }
};

/*Things learnt
**Have 3 pointers prev,nex and current, put current->next to nex,prev to current->next, then put current to prev and nex to current.
*/
